{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenMark: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "OpenMark: Python Direct",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "jinja": true
        },
        {
            "name": "OpenMark: Gunicorn (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "gunicorn",
            "args": [
                "--bind=0.0.0.0:5000",
                "--workers=2",
                "--reload",
                "run:app"
            ],
            "console": "integratedTerminal"
        }
    ]
}
